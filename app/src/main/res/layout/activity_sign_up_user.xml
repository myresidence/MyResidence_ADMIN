<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hfad.myresidentadmin.SignUpUser">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:background="@color/pastel_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration User"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="170dp"/>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            app:civ_border_color="@color/pastel_2"
            app:civ_border_width="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/logo">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textAlignment="center"
                android:textSize="20sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="11"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                app:met_textColorHint="@color/black_overlay" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserName"
                android:hint="Name As Per IC"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="textPersonName"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserIC"
                android:hint="IC Number"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="number"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="12"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserEmail"
                android:hint="Email"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="15"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserPassword"
                android:hint="Password"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="textPassword"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="12"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserSecureCode"
                android:hint="Secure Code"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="text"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="6"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"
                android:focusable="false"/>

            <Spinner
                android:id="@+id/UserGenderSpinner"
                android:hint="Gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@android:color/black"
                android:text="Male"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:entries="@array/Gender" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserDOB"
                android:hint="Date Of Birth"
                android:textAlignment="center"
                app:met_textColorHint="@color/black_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="text"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="10"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/UserCarPlate"
                android:hint="Car Plate Number"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                app:met_textColorHint="@color/black_overlay"
                android:textSize="20sp"
                android:inputType="number"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="4"
                app:met_primaryColor="@android:color/black"
                app:met_singleLineEllipsis="true" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/UserUnit"
                android:hint="Unit"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:textAlignment="center"
                android:entries="@array/Unit"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </Spinner>
            <Spinner
                android:id="@+id/UserLevel"
                android:hint="Level"
                android:layout_width="126dp"
                android:layout_height="50dp"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:textAlignment="center"
                android:entries="@array/Level"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </Spinner>
            <Spinner
                android:id="@+id/UserNo"
                android:hint="No"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:textAlignment="center"
                android:entries="@array/NO"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/UserLevel">
            </Spinner>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="950dp"
            android:layout_marginHorizontal="30dp"
            android:paddingBottom="8dp">

            <info.hoang8f.widget.FButton
                android:id="@+id/UserSignUp"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonColor="@color/pastel_2"
                app:cornerRadius="24dp"
                app:shadowEnabled="true"/>

        </LinearLayout>



    </RelativeLayout>

</ScrollView>