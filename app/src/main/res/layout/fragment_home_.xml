<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hfad.myresidentadmin.HomeFragment"
    android:theme="@style/NoTitleBar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/app_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/maintenance_support"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome , DEMO"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/unit_no"
        android:layout_alignStart="@+id/unit_no" />

    <TextView
        android:id="@+id/unit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit No: DEMO"
        tools:layout_editor_absoluteY="47dp"
        tools:layout_editor_absoluteX="86dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/visitor" />

    <Button
        android:id="@+id/sos_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Button"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_alignBottom="@+id/announcement_advertisment"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/announcement_advertisment"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:textSize="9.8dp"
        android:text="Announcement Advertisment"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_alignBaseline="@+id/parking_management"
        android:layout_alignBottom="@+id/parking_management"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bill_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ Payment"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="230dp"
        android:layout_alignBaseline="@+id/visitor"
        android:layout_alignBottom="@+id/visitor"
        android:layout_alignEnd="@+id/announcement_advertisment" />

    <Button
        android:id="@+id/facilities_reservation"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:text="Facilities Reservation"
        android:textSize="9.9dp"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="140dp"
        android:layout_alignBottom="@+id/bill_payment"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/visitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visitor"
        tools:layout_editor_absoluteY="140dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/parking_management"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:text="Parking Management"
        android:textSize="9.9dp"
        tools:layout_editor_absoluteY="140dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/maintenance_support"
        android:layout_alignStart="@+id/visitor" />

    <Button
        android:id="@+id/maintenance_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance Support"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="326dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
